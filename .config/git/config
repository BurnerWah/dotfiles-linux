	remote = green
[color "diff"] # $ git diff
	meta = 11
	frag = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse
[color "status"] # $ git status
	added = yellow
	changed = green
	untracked = cyan
