#autoload

local dir="$(
  z -l \
| sed "s|$HOME|~|" \
\
| fzf +m +s -e \
      --reverse --tac \
      --info='inline' \
      --nth 2.. \
      --height=35% \
      --header='Rating     Path' \
\
| sed -e "s|~|$HOME|" \
      -e 's/[0-9\. ]*//'
)"

zle redisplay
cd ${dir:-$PWD}
local ret=$?
zle redraw-prompt
return $ret
# vim:fenc=utf-8 ft=zsh
